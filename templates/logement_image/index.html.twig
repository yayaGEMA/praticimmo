{% extends 'base.html.twig' %}

{% block title %}LogementImage index{% endblock %}

{% block body %}
    <h1>LogementImage index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image_name</th>
                <th>Image_size</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for logement_image in logement_images %}
            <tr>
                <td>{{ logement_image.id }}</td>
                <td>{{ logement_image.imageName }}</td>
                <td>{{ logement_image.imageSize }}</td>
                <td>{{ logement_image.updatedAt ? logement_image.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('logement_image_show', {'id': logement_image.id}) }}">show</a>
                    <a href="{{ path('logement_image_edit', {'id': logement_image.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('logement_image_new') }}">Create new</a>
{% endblock %}
